;; #include <cstdlib>
;; #include "myheader.h"
;; ───────────────────────────────────────────────────────────────────────────
(preproc_include
  path: [(system_lib_string) (string_literal)] @import_path) @import_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; using namespace std;
;; ───────────────────────────────────────────────────────────────────────────
(using_declaration
  (identifier) @import_path) @import_stmt
