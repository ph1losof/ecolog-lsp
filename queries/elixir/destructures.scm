;; Elixir Destructure Queries
;; ═════════════════════════════════════════════════════════════════════════

;; ───────────────────────────────────────────────────────────────────────────
;; {a, b} = tuple (tuple destructuring)
;; ───────────────────────────────────────────────────────────────────────────
(binary_operator
  left: (tuple
    (identifier) @destructure_key)
  operator: "=") @destructure

;; ───────────────────────────────────────────────────────────────────────────
;; %{key: value} = map (map destructuring)
;; ───────────────────────────────────────────────────────────────────────────
(binary_operator
  left: (map
    (map_content
      (keywords
        (pair
          key: (_) @destructure_key))))
  operator: "=") @destructure
