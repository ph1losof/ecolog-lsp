;; ───────────────────────────────────────────────────────────────────────────
;; do...end blocks
;; ───────────────────────────────────────────────────────────────────────────
(do_block) @scope_node

;; ───────────────────────────────────────────────────────────────────────────
;; Anonymous functions: fn -> end
;; ───────────────────────────────────────────────────────────────────────────
(anonymous_function) @scope_node

;; ───────────────────────────────────────────────────────────────────────────
;; Stab clauses (function clauses)
;; ───────────────────────────────────────────────────────────────────────────
(stab_clause) @scope_node
