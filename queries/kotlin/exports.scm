;; ═════════════════════════════════════════════════════════════════════════
;; Kotlin Export Queries
;; ═════════════════════════════════════════════════════════════════════════
;; Kotlin uses visibility modifiers. Public is the default.

;; ───────────────────────────────────────────────────────────────────────────
;; class Foo {}
;; ───────────────────────────────────────────────────────────────────────────
(class_declaration
  (identifier) @export_name) @export_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; fun foo() {}
;; ───────────────────────────────────────────────────────────────────────────
(function_declaration
  (identifier) @export_name) @export_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; val/var property
;; ───────────────────────────────────────────────────────────────────────────
(property_declaration
  (variable_declaration
    (identifier) @export_name)) @export_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; object Foo {}
;; ───────────────────────────────────────────────────────────────────────────
(object_declaration
  (identifier) @export_name) @export_stmt
