;; TypeScript Reassignment Queries
;; ═══════════════════════════════════════════════════════════════════════════

;; ───────────────────────────────────────────────────────────────────────────
;; x = ...
;; x += ...
;; ───────────────────────────────────────────────────────────────────────────
(assignment_expression
  left: (identifier) @reassigned_name) @reassignment

;; ───────────────────────────────────────────────────────────────────────────
;; x++
;; x--
;; ++x
;; --x
;; ───────────────────────────────────────────────────────────────────────────
(update_expression
  argument: (identifier) @reassigned_name) @reassignment
