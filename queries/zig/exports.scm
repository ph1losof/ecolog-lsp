;; Zig Export Queries
;; ═════════════════════════════════════════════════════════════════════════
;; Zig uses pub keyword for exports

;; ───────────────────────────────────────────────────────────────────────────
;; pub fn foo() {}
;; ───────────────────────────────────────────────────────────────────────────
(function_declaration
  (pub)
  (identifier) @export_name) @export_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; pub const x = ...;
;; ───────────────────────────────────────────────────────────────────────────
(variable_declaration
  (pub)
  (identifier) @export_name) @export_stmt
