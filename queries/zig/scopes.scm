;; Zig Scope Node Queries
;; ═════════════════════════════════════════════════════════════════════════

;; ───────────────────────────────────────────────────────────────────────────
;; Functions
;; ───────────────────────────────────────────────────────────────────────────
(function_declaration) @scope_node

;; ───────────────────────────────────────────────────────────────────────────
;; Blocks
;; ───────────────────────────────────────────────────────────────────────────
(block) @scope_node

;; ───────────────────────────────────────────────────────────────────────────
;; Loops
;; ───────────────────────────────────────────────────────────────────────────
(for_expression) @scope_node
(while_expression) @scope_node

;; ───────────────────────────────────────────────────────────────────────────
;; Conditionals
;; ───────────────────────────────────────────────────────────────────────────
(if_expression) @scope_node
(switch_expression) @scope_node
