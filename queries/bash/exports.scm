;; Bash/Shell Export Queries
;; ═════════════════════════════════════════════════════════════════════════

;; ───────────────────────────────────────────────────────────────────────────
;; export VAR=value
;; ───────────────────────────────────────────────────────────────────────────
(declaration_command
  (variable_assignment
    name: (variable_name) @export_name)) @export_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; export VAR
;; ───────────────────────────────────────────────────────────────────────────
(declaration_command
  (variable_name) @export_name) @export_stmt

;; ───────────────────────────────────────────────────────────────────────────
;; Function definitions (exported via declare -f)
;; ───────────────────────────────────────────────────────────────────────────
(function_definition
  name: (word) @export_name) @export_stmt
